@model TicketViewModel.SearchFlightViewModel.SearchFlightViewModel

@using (Html.BeginForm("SearchFlight","Default",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.First_Location)
    @Html.HiddenFor(model => model.Second_Location)
    @Html.HiddenFor(model => model.MoveDate)
    @Html.HiddenFor(model => model.PassengerCount)


    <div class="col-lg-12">
        <div class="col-lg-3">
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.CorporateId, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-12">
                    @Html.DropDownList("CorporateId", ViewBag.Corporate as IEnumerable<SelectListItem>, "...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CorporateId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.FlightClass, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-12">
                    @Html.EnumDropDownListFor(model => model.FlightClass, "...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FlightClass, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.TicketType, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-12">
                    @Html.EnumDropDownListFor(model => model.TicketType, "...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TicketType, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="جستجو" class="btn btn-warning form-control" />
                </div>
            </div>
        </div>

    </div>








</div>
}


