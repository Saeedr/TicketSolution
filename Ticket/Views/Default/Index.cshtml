@model TicketViewModel.SearchFlightViewModel.SearchFlightViewModel

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("SearchFlight", "Default", FormMethod.Post))
{
    <div class="container">
        <div class="row" style="margin-top:5%">
            <div class="col-lg-12" style="background-image: url('../../Content/Image/flight.jpeg'); padding:35% 5% 10% 0; background-size:cover">
                <div class="col-lg-3">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.First_Location, new { @class = "control-label" })
                        </div>
                        <div class="col-lg-12">
                            @Html.EnumDropDownListFor(model => model.First_Location, "مبدا را انتخاب کنید", new { @class = "form-control", @id = "cmbFirstLocation", @onChange = "changeItem(this.value)" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Second_Location, new { @class = "control-label" })
                        </div>
                        <div class="col-lg-12">
                            @Html.EnumDropDownListFor(model => model.Second_Location, "مقصد را انتخاب کنید", new { @class = "form-control", @id = "cmbSecondLocation", @disabled = "disabled" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.MoveDate, new { @class = "control-label" })
                        </div>
                        <div class="col-lg-12">
                            @Html.EditorFor(model => model.MoveDate, new { htmlAttributes = new { @class = "form-control", @id = "txtMoveDate" } })
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.PassengerCount, new { @class = "control-label" })
                        </div>
                        <div class="col-lg-12">
                            @Html.EditorFor(model => model.PassengerCount, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <label></label>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-default" value="جستجو" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section myScript{
    <script src="~/Scripts/MdBootstrapPersianDateTimePicker/jalaali.js"></script>
    <script src="~/Scripts/MdBootstrapPersianDateTimePicker/jquery.Bootstrap-PersianDateTimePicker.js"></script>

    <script>
        $("#txtMoveDate").MdPersianDateTimePicker({
            TargetSelector: '#txtMoveDate',
            EnglishNumber: true
        });

        function changeItem(val) {
            $("#cmbSecondLocation").removeAttr("disabled");
            var op = $("#cmbFirstLocation option").clone();
            $("#cmbSecondLocation").empty();
            $("#cmbSecondLocation").append(op);
            $("#cmbSecondLocation").val($("#cmbFirstLocation").val());
            if (val != 0) {
                $("#cmbSecondLocation option[value=" + val + "]").remove();
            }
        }
    </script>

}