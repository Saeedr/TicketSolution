<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Responsive Admin</title>
    <!-- BOOTSTRAP STYLES-->

    @Styles.Render("~/Content/MyCSS")
    <link href="~/Content/alertifyjs/alertify.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.rtl.min.css" rel="stylesheet" />


    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>



    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="assets/img/logo.png" />

                    </a>

                </div>
                @using (Html.BeginForm("LogOutAdmin", "Admin", FormMethod.Post, new { id = "logOutAdminForm" }))
                {
                    <span class="logout-spn">
                        <a href="javascript:document.getElementById('logOutAdminForm').submit()" style="color:#fff;">LOGOUT</a>
                    </span>
                }

            </div>
        </div>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">



                    <li class="active-link">
                        <a href="@Url.Action("Index","Flights")"><i class="fa fa-desktop "></i>مدیریت پروازها </a>
                    </li>

                    <li class="">
                        <a href="@Url.Action("Index","Corporates")"><i class="fa fa-desktop "></i>مدیریت شرکت های هواپیمایی </a>
                    </li>



                </ul>
            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                @RenderBody()
                <!-- /. ROW  -->
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <div class="footer">


        <div class="row">
            <div class="col-lg-12">
                &copy;  2014 yourdomain.com | Design by: <a href="http://binarytheme.com" style="color:#fff;" target="_blank">www.binarytheme.com</a>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/MyJs");
    <script src="~/Scripts/alertify.min.js"></script>

    @RenderSection("myScript", required: false)

</body>
</html>
